<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <com.example.psycho.ui.custom.CircleProgressBar
        android:id="@+id/circle_progress_bar_a"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:descText="卡路里"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp" />

    <com.example.psycho.ui.custom.CircleProgressBar
        android:id="@+id/circle_progress_bar_b"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:descText="步数"
        app:layout_constraintBottom_toBottomOf="@+id/circle_progress_bar_a"
        app:layout_constraintStart_toEndOf="@+id/circle_progress_bar_a"
        app:layout_constraintTop_toTopOf="@+id/circle_progress_bar_a"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />


</androidx.constraintlayout.widget.ConstraintLayout>